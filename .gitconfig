[user]
	name = aklishin
	email = aklishin@inno.tech
[color]
	ui = true
[core]
	editor = vim
    pager = less -q
[merge]
	tool = vim -d
[alias]
	ci = commit
	s = status --untracked-files=no
	st = status
	br = branch
	co = checkout
	prune = fetch --prune
	l    = log --graph --decorate --pretty=format:\"%Cgreen%h%Creset %d (%ar - %C(yellow)%an%Creset), %s\"
	lt   = log --graph --decorate --pretty=format:\"%Cgreen%h%Creset %d (%ar - %C(yellow)%an%Creset), %s\" --stat
	la   = log --graph --decorate --pretty=format:\"%Cgreen%h%Creset %d (%ar - %C(yellow)%an%Creset), %s\" --all
	lat  = log --graph --decorate --pretty=format:\"%Cgreen%h%Creset %d (%ar - %C(yellow)%an%Creset), %s\" --all --stat
	ll   = log --graph --decorate --pretty=short  --abbrev-commit
	llt  = log --graph --decorate --pretty=short  --abbrev-commit --stat
	lla  = log --graph --decorate --pretty=short  --abbrev-commit --all
	lll  = log --graph --decorate --pretty=fuller --abbrev-commit
	llla = log --graph --decorate --pretty=fuller --abbrev-commit --all
[push]
	default = nothing
[pull]
    ff = only
